<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.g9.challenge.aluralatam.miconversordemonedas.ConversorViewController">
   <content>
      <BorderPane prefHeight="600.0" prefWidth="800.0">
         <top>
              <Label alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" nodeOrientation="LEFT_TO_RIGHT" text="Conversor De Monedas" textAlignment="CENTER" BorderPane.alignment="CENTER">
                  <font>
                      <Font size="24.0" />
                  </font>
               <padding>
                  <Insets bottom="50.0" />
               </padding>
              </Label>
         </top>
         <center>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <MediaView fx:id="mediaView" fitHeight="400.0" fitWidth="600.0" />
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                            <Label alignment="BOTTOM_LEFT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="199.0" text="Ingrese un monto" />
                            <TextField fx:id="txtMonto" alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="200.0">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </TextField>
                        <HBox alignment="CENTER" prefHeight="47.0" prefWidth="362.0">
                           <children>

                                  <Label alignment="CENTER" prefHeight="18.0" prefWidth="20.0" text="De">
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                              </Label>
                                  <ComboBox fx:id="cmbDeMonedas" editable="true" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.6" prefWidth="173.6" promptText="Elija una moneda" />
                                  <Label alignment="CENTER" prefHeight="18.0" prefWidth="24.0" text="a" />
                                  <ComboBox fx:id="cmbAMonedas" editable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.6" prefWidth="173.6" promptText="Elija una moneda" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" />
                           </padding>
                        </HBox>

                          <Label fx:id="lblResultado" alignment="CENTER" maxWidth="1.7976931348623157E308" textFill="#04b947" wrapText="true">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblRate" alignment="CENTER" maxWidth="1.7976931348623157E308">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="lblUltimaAct" alignment="CENTER" maxWidth="1.7976931348623157E308">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="lblProximaAct" alignment="CENTER" maxWidth="1.7976931348623157E308">
                           <VBox.margin>
                              <Insets bottom="50.0" />
                           </VBox.margin>
                        </Label>

                          <Button fx:id="btnConvertir" mnemonicParsing="false" onAction="#realizarConversion" style="-fx-background-radius: 20; -fx-font-size: 14px;" text="Convertir" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </VBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </content>
</ScrollPane>
